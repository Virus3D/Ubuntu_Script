{
  "window.commandCenter": true,
  "cursor.composer.shouldChimeAfterChatFinishes": true,
  "editor.renderWhitespace": "all",
  "files.trimTrailingWhitespace": true,
  "diffEditor.ignoreTrimWhitespace": false,
  // ESLint для JavaScript
  "eslint.enable": true,
  "eslint.run": "onType",
  "eslint.lintTask.enable": true,
  "eslint.options": {
    "configFile": "~/.eslintrc.js"
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue"
  ],
  "eslint.workingDirectories": [
    "."
  ],
  // Stylelint для CSS
  "stylelint.enable": true,
  "stylelint.configFile": "[HOME]/.stylelintrc.json",
  "stylelint.validate": [
    "css",
    "scss",
    "less",
    "postcss"
  ],
  // PHP Code Sniffer
  "phpcs.enable": true,
  "phpcs.standard": "PSR12",
  "phpcs.workspaceRoot": null,
  "phpcs.ignorePatterns": [
    "**/vendor/**",
    "**/node_modules/**",
    "**/storage/**",
    "**/cache/**"
  ],
  "phpcs.showWarnings": true,
  "phpcs.showSources": true,
  // Общие настройки линтинга
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.stylelint": "explicit"
  },
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  // Оптимизация производительности
  "files.watcherExclude": {
    "**/*.min.css": true,
    "**/*.min.js": true,
    "**/build/**": true,
    "**/cache/**": true,
    "**/dist/**": true,
    "**/node_modules/**": true,
    "**/storage/**": true,
    "**/vendor/**/{test,doc,TEST,DOC}": true,
    "**/vendor/**/test/**": true,
    "**/vendor/**/tests/**": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/vendor": true,
    "**/storage": true,
    "**/cache": true,
    "**/dist": true,
    "**/build": true
  },
  "files.exclude": {
    "**/node_modules": true,
    // "**/vendor": true,
    "**/storage": true,
    "**/cache": true
  },
  "editor.minimap.enabled": false,
  "editor.renderLineHighlight": "none",
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.inlineSuggest.enabled": true,
  "typescript.suggest.autoImports": true,
  "javascript.suggest.autoImports": true,
  "phpsab.executablePathCBF": "[HOME]/.config/composer/vendor/bin/phpcbf",
  "phpsab.executablePathCS": "[HOME]/.config/composer/vendor/bin/phpcs",
  "phpsab.snifferShowSources": true,
  "phpsab.standard": "[HOME]/phpcs-rules/MyStandard/ruleset.xml",
  "phpsab.composerJsonPath": "composer.json",
  "phpsab.debug": true,
  "phpsab.autoRulesetSearch": false,
  "[php]": {
    "editor.defaultFormatter": "valeryanm.vscode-phpsab",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.intelephense": "explicit"
    }
  },
  "php-cs-fixer.executablePath": "~/.config/composer/vendor/bin/php-cs-fixer",
  "php-cs-fixer.executablePathWindows": "", //eg: php-cs-fixer.bat
  "php-cs-fixer.onsave": false,
  "php-cs-fixer.rules": "@PSR12",
  "php-cs-fixer.config": "./.php-cs-fixer.dist.php",
  "php-cs-fixer.allowRisky": true,
  "php-cs-fixer.pathMode": "override",
  "php-cs-fixer.ignorePHPVersion": false,
  "php-cs-fixer.exclude": [],
  "php-cs-fixer.autoFixByBracket": false,
  "php-cs-fixer.autoFixBySemicolon": false,
  "php-cs-fixer.formatHtml": false,
  "php-cs-fixer.documentFormattingProvider": true,
  "better-comments.multilineComments": true,
  "better-comments.highlightPlainText": true,
  "better-comments.tags": [
    {
      "tag": "!",
      "color": "#FF2D00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "?",
      "color": "#3498DB",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "//",
      "color": "#474747",
      "strikethrough": true,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "todo",
      "color": "#FF8C00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "*",
      "color": "#98C379",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    }
  ],
  "namespaceResolver.exclude": "**/node_modules/**", // Exclude glob pattern while finding files
  "namespaceResolver.showMessageOnStatusBar": false, // Show message on status bar instead of notification box
  "namespaceResolver.autoSort": true, // Auto sort after imports
  "namespaceResolver.sortOnSave": false, // Auto sort when a file is saved
  "namespaceResolver.sortAlphabetically": false, // Sort imports in alphabetical order instead of line length
  "namespaceResolver.sortNatural": false, // Sort imports using a 'natural order' algorithm
  "namespaceResolver.leadingSeparator": true, // Expand class with leading namespace separator
  "namespaceResolver.highlightOnSave": false, // Auto highlight not imported and not used when a file is saved
  "namespaceResolver.highlightOnOpen": false, // Auto highlight not imported and not used when a file is opened
  // Основные настройки Intelephense
  "intelephense.environment.shortOpenTag": false,
  // Автодополнение
  "intelephense.completion.insertUseDeclaration": true,
  "intelephense.completion.triggerParameterHints": true,
  "intelephense.completion.fullyQualifyGlobalConstantsAndFunctions": false,
  "intelephense.completion.maxItems": 100,
  // Диагностика
  "intelephense.diagnostics.run": "onType",
  "intelephense.diagnostics.undefinedTypes": true,
  "intelephense.diagnostics.undefinedFunctions": true,
  "intelephense.diagnostics.undefinedConstants": true,
  "intelephense.diagnostics.undefinedClassConstants": true,
  "intelephense.diagnostics.undefinedMethods": true,
  "intelephense.diagnostics.undefinedProperties": true,
  "intelephense.diagnostics.undefinedVariables": true,
  "intelephense.diagnostics.undefinedSymbols": true,
  "intelephense.diagnostics.deprecated": true,
  "intelephense.diagnostics.undefinedDocClasses": true,
  // Исключения файлов (оптимизировано для производительности)
  "intelephense.files.exclude": [
    "**/vendor/**/{test,doc,TEST,DOC,Example,example}",
    "**/vendor/**/{Tests,tests,Test,test}/**",
    "**/vendor/**/vendor/**",
    "**/var/cache/**",
    "**/var/log/**",
    "**/node_modules/**",
    "**/.git/**",
    "**/*.min.js",
    "**/*.min.css"
  ],
  // Производительность
  "intelephense.files.maxSize": 4000000,
  "intelephense.trace.server": "off",
  "intelephense.memoryLimit": 4096,
  // CodeLens
  "intelephense.codeLens.implementations.enable": true,
  "intelephense.codeLens.overrides.enable": true,
  "intelephense.codeLens.parent.enable": true,
  "intelephense.codeLens.references.enable": true,
  "intelephense.codeLens.usages.enable": true,
  // Форматирование
  "intelephense.format.enable": true,
  "intelephense.format.keywordCase": "lower",
  // Настройки для Symfony
  "intelephense.environment.includePaths": [
    "./vendor",
    "./bundles"
  ],
  "intelephense.compatibility.preferPsalmPhpstanPrefixedAnnotations": true,
  "files.associations": {
    "*.twig": "html"
  },
}